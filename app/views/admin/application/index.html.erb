
<div class="row">
    <div class="col-sm-3 admin">
        <div class="admin-sidebar">
            <div class= "user-panel">
                <div class="pull-left image">
                    <%= image_tag avatar_url(current_user), class: "img-circle", width: 20 %>
                </div>
                <div class="pull-left info">
                    <p><%= current_user.full_name %></p>
                </div>
            </div>
        </div>
        <ul class="admin-menu">
            <li class="text-uppercase text-center header">Main Navigation </li>
            <li>
                <%= link_to admin_users_path do %>
                    <%=  icon("fa-regular", "far fa-user") %>
                    <span> Users </span>
                    <span class="label label-primary pull-right"> <%= @users.count %> </span>
                <% end %>
            </li>
            <li>
                <%= link_to admin_categories_path do %>
                    <%=  icon("fa-regular", "fas fa-th-list") %>
                    <span> Categories </span>
                    <span class="label label-info pull-right"> <%= @categories.count %> </span>
                <% end %>
            </li>
            <li>
                <%= link_to admin_attendances_path do %>
                    <%=  icon("fa-regular", "far fa-user") %>
                    <span> Attendees </span>
                    <span class="label label-primary pull-right"> <%= @attendances.count %> </span>
                <% end %>
            </li>
            <li>
                <%= link_to "#" do %>
                    <%=  icon("fa-regular", "fas fa-calendar") %>
                    <span> Events </span>
                    <span class="label label-warning pull-right"> <%= @events.count %> </span>
                <% end %>
            </li>
            <li>
                <%= link_to "#" do %>
                    <%=  icon("fa-regular", "fas fa-tags") %>
                    <span> Tags </span>
                    <span class="label label-default pull-right"> <%= @tags.count %> </span>
                <% end %>
            </li>
            <li>
                <%= link_to admin_comments_path do %>
                    <%=  icon("fa-regular", "fas fa-comments") %>
                    <span> Comments </span>
                    <span class="label label-primary pull-right"><%= @comments.count %></span>
                <% end %>
            </li>
            <li>
                <%= link_to "#" do %>
                    <%=  icon("fa-regular", "fas fa-heart") %>
                    <span> Likes </span>
                    <span class="label label-danger pull-right"> <%= @likes.count %> </span>
                <% end %>
            </li>
        </ul>

    </div>
    <div class="col-sm-9">
        <header>
            <h1>Dashboard <small> Control Panel</small></h1>

            <h4>Welcome to Admin Dashboard of EventsBoard</h4>
        </header>
    </div>
</div>


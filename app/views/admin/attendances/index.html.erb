<header>
    <h1> All attendees </h1>
</header>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Attendee</th>
            <th>Event</th>
            <th>Seats left</th>
        </tr>
    </thead>
    <tbody>
        <% @attendances.each do |attendance| %>
            <tr>
                <th><%= attendance.attendee.full_name %></th>
                <th><%= link_to attendance.attended_event.title, event_path(attendance.attended_event) %></th>
                <th><%= attendance.attended_event.seats_left %></th>
            </tr>
        <% end %>
    </tbody>
</table>
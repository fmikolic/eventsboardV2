<%= simple_form_for(event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%# simple form inputs %>
  <%= form.input :title %>

  <%= form.input :description %>

  <%= form.input :start_date, as: :datetime, start_year: Date.today.year, order: [:day, :month, :year] %>

  <%= form.input :end_date, as: :datetime, start_year: Date.today.year, order: [:day, :month, :year] %>

  <%= form.input :venue %>

  <%= form.input :location %>

  <%= form.button :submit, class: "btn btn-primary" %>

<% end %>
